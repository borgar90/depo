<!-- _cc.html.erb -->
<fieldset data-payment-target="additionalFields" data-id="<%= PaymentType.find_by(name: 'Credit card').id %>" data-type="Credit card">
  <!-- Fields specific to credit card payments -->
  <div class="my-5">
    <%= form.label :credit_card_number %>
    <%= form.password_field :credit_card_number, class: "input-field" %>
  </div>
  <div class="my-5">
    <%= form.label :expiration_date %>
    <%= form.text_field :expiration_date, class: "input-field", size: 9, placeholder: "e.g. 03/22" %>
  </div>
</fieldset>