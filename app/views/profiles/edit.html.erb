<h1>Edit Profile</h1>
<%= form_with(model: @profile, local: true) do |form| %>
  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>
  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone %>
  </div>
  <div class="field">
    <%= form.label :shipping_info %>
    <%= form.text_area :shipping_info %>
  </div>
  <div class="actions">
    <%= form.submit 'Save' %>
  </div>
<% end %>
<%= link_to 'Back', profile_path %>